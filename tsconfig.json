{
  "compilerOptions": {
    "outDir": "./www/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck" : true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include" : [
    "./src/**/*",
    "node_modules/phaser/scripts/tsgen/test/src/game.ts"
  ],
  "exclude" : [
    "./test/**/*"
  ]
}